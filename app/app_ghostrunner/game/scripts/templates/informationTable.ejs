<section class="table-column left-table">
	<section class="game-interruption-buttons">
		<button id="pause_btn" class="menu-btn pause_btn">Pause</button>
		<button id="abandon_btn" class="menu-btn abandon_btn">Abandon</button>
	</section>
	<div class="left-player-info">
		<span class="player-role"><%= thisUser.team.currentPlayer.role.displayText %></span>
		<span class="player-name"><%= thisUser.team.currentPlayer.name %></span>
		<span class="player-year"><%= thisUser.team.city %></span>
		<div class="player-skills-container">
			<% _.each(thisUser.team.currentPlayer.skills, function(skill) { %>
				<div class="player-skills">
					<span class="skill-name"><%= skill.skillName %>:</span>
					<span class="skill-level level-<%= skill.level %>"><%= skill.levelName %></span>
				</div>
			<% }) %>
		</div>
	</div>
	<div class="left-team-info">
		<div class="team-info">
			<div class="user-field">
				<span class="user-name"><%= thisUser.user.userName %></span>
				<span class="team-city"><%= thisUser.team.city %></span>
			</div>
			<div class="team-status">
				<img src="./images/baseball_cap.png" alt="">
			</div>
		</div>
		<table>
			<thead class="team-info-head">
				<tr>
					<th>PLAYER</th>
					<th>POSITION</th>
				</tr>
			</thead>
			<tbody class="team-info-body">
				<% _.each(thisUser.team.players, function(player) { %>
					<tr>
						<td><%= player.name %></td>
						<td><%= player.position.displayText %></td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</section>
<section class="table-column center-table">
	<div class="game-table">
		<div class="game-table-left">
			<div class="game-statistic">
				<table>
					<caption class="game-name">
						<span>American League Game</span>
					</caption>
					<thead class="game-stats-head">
						<tr>
							<th>
								<div class="ball">
									<img src="./images/baseball_ball.png" alt="">
								</div>
							</th>
							<th>1</th>
							<th>2</th>
							<th>3</th>
							<th>4</th>
							<th>5</th>
							<th>6</th>
							<th>7</th>
							<th>8</th>
							<th>9</th>
							<th>10</th>
							<th></th>
							<th>R</th>
							<th>H</th>
							<th>E</th>
						</tr>
					</thead>
					<tbody class="game-stats-body">
						<tr>
							<td><%= scoresTable.thisTeam.city %></td>
							<% for(var round = 0; round < 10; round++){ %>
								<% if (scoresTable.thisTeam.scores[round]){ %>
									<td><%= scoresTable.thisTeam.scores[round].scores %></td>
								<% } else { %>
									<td>.</td>
								<% } %>
							<% } %>
							<th></th>
							<td>0</td>
							<td>1</td>
							<td>0</td>
						</tr>
						<tr>
							<td><%= scoresTable.otherTeam.city %></td>
							<% for(var round = 0; round < 10; round++){ %>
								<% if (scoresTable.otherTeam.scores[round]){ %>
									<td><%= scoresTable.otherTeam.scores[round].scores %></td>
								<% } else { %>
									<td>.</td>
								<% } %>
							<% } %>
							<th></th>
							<td>0</td>
							<td>0</td>
							<td>0</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="game-table-right">
			<div class="game-status">
				<div class="status-row game-out">
					<span>OUT:</span>
					<div class="status-circle">
						
					</div>
					<div class="status-circle">
						
					</div>
				</div>
				<div class="status-row game-h">
					<span>H:</span>
					<div class="status-circle">
						
					</div>
				</div>
				<div class="status-row game-e">
					<span>E:</span>
					<div class="status-circle">
						
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="table-column right-table">
	<section class="opponent-status">
		<span class="opponent-in-game <% if (otherUser.user.presence === 'ONLINE') { %>online<% } else { %>offline<% } %>"></span>
		<span class="status-text">OPPONENT STATUS</span>
	</section>
	<div class="right-player-info">
		<span class="player-role"><%= otherUser.team.currentPlayer.role.displayText %></span>
		<span class="player-name"><%= otherUser.team.currentPlayer.name %></span>
		<span class="player-year"><%= otherUser.team.city %></span>
		<div class="player-skills-container">
			<% _.each(otherUser.team.currentPlayer.skills, function(skill) { %>
				<% if (skill.dynamic) { %>
					<div class="player-skills">
						<span class="skill-name"><%= skill.skillName %>:</span>
						<span class="skill-level"><%= skill.level %></span>
					</div>
					<div class="player-skills stamina-status">
						<div class="stamina-line"></div>
						<div class="player-skills">
							<span class="stamina-text"><%= skill.skillName %></span>
							<span class="stamina-text"><%= skill.level %>(100%/100%)</span>
						</div>
					</div>
				<% } else { %>
					<div class="player-skills">
						<span class="skill-name"><%= skill.skillName %>:</span>
						<span class="skill-level level-<%= skill.level %>"><%= skill.levelName %></span>
					</div>
				<% } %>
			<% }) %>
		</div>
	</div>
	<div class="right-team-info">
		<div class="team-info">
			<div class="user-field">
				<span class="user-name"><%= otherUser.user.userName %></span>
				<span class="team-city"><%= otherUser.team.city %></span>
			</div>
			<div class="team-status">
				<img src="./images/baseball_cap.png" alt="">
			</div>
		</div>
		<table>
			<thead class="team-info-head">
				<tr>
					<th>PLAYER</th>
					<th>POSITION</th>
				</tr>
			</thead>
			<tbody class="team-info-body">
				<% _.each(otherUser.team.players, function(player) { %>
					<tr>
						<td><%= player.name %></td>
						<td><%= player.position.displayText %></td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</section>